<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_of_image_label"
        android:src="@drawable/label"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/label" />

    <TextView
        android:id="@+id/weather"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label"/>
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="@string/city_name"
        tools:ignore="LabelFor" />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/show_wind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_wind"
        android:textOn="@string/true_on"
        android:textOff="@string/false_off"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/show_humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_humidity"
        android:textOn="@string/true_on"
        android:textOff="@string/false_off"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/show_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_pressure"
        android:textOn="@string/true_on"
        android:textOff="@string/false_off"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_search"
        android:onClick="onClickBtnSearch"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>